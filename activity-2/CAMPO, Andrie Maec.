import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner code=new Scanner(System.in);
		int total=0,item;
		System.out.println("DO YOU WANT TO MAKE AN ORDER?\n[1]YES    [2]NO");
		int i=code.nextInt();
		while(i==1){
		    System.out.println("SELECT FOR CATEGORIES BELOW:");
		    System.out.println("[1]FOODS\n[2]SNACKS\n[3]BEVERAGES");
		    int ctgry=code.nextInt();
		    
		    if(ctgry==1){
		        System.out.println("--YOU SELECTED FOODS--");
		        //FOOD CHOICES//
		       System.out.println("[1]SILOG: $15");
		       System.out.println("[2]KALDERETA: $20");
		       System.out.println("[3]SINIGANG: $5");
		       System.out.println("[4]GINALING: $25");
		       System.out.println("[5]CRISPY PATA: $25");
		       
		        System.out.println("ENTER ITEM:");
		        item=code.nextInt();
		        //FOOD PRICES//
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc SILOG");
		            total=total+15;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc KALDERETA");
		            total=total+20;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pcSINIGANG");
		            total=total+25;
		            }else if (item==1){
		            System.out.println("YOU SELECTED 1pc GINALING");
		            total=total+25;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc CRISPY PATA");
		            total=total+25;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		        
		    }else if(ctgry==2){
		        System.out.println("--YOU SELECTED SNACKS--");
		        //SNACKS CHOICES//
		       System.out.println("[1]CHOCOLATE: $10");
		       System.out.println("[2]WHITE CHOCOLATE: $20");
		       System.out.println("[3]DARK CHOCOLATE: $5");
		       System.out.println("[4]MILK CHOCOLATE: $15");
		       System.out.println("[5]MINT CHOCOLATE: $25");
		        //SNACKS PRICES//
		        System.out.println("ENTER ITEM:");
		        item=code.nextInt();
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc CHOCOLATE");
		            total=total+10;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc WHITE CHOCOLATE");
		            total=total+20;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc DARK CHOCOLATE");
		            total=total+5;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc MILK CHOCOLATE");
		            total=total+15;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc MINT CHOCOLATE");
		            total=total+25;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		    }else if(ctgry==3){
		        System.out.println("--YOU SELECTED BEVERAGES--");
		        //BEVERAGE CHOICES//
		       System.out.println("[1]WATER: $100");
		       System.out.println("[2]SODA WATER: $50");
		       System.out.println("[3]PH 9: $70");
		       System.out.println("[4]DISTILLED WATER: $20");
		       System.out.println("[5]SPRING WATER: $15");
		       //BEVERAGE PRICES//
		       System.out.println("ENTER ITEM:");
		        item=code.nextInt();
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc WATER");
		            total=total+100;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc SODA WATER");
		            total=total+50;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc PH 9");
		            total=total+70;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc DISTILLED WATER ");
		            total=total+20;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc SPRING WATER");
		            total=total+15;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		    }else{
		        System.out.println("INVALID KEY.");
		    }
		    System.out.println("DO YOU WANT TO MAKE ANOTHER PURCHASE?\n[1]YES    [2]NO");
		    i=code.nextInt();
		}
		System.out.println("TOTAL PURCHACE:"+total);
	}
}
